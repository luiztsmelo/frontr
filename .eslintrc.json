{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["airbnb"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"plugins": ["react", "react-hooks"],
	"rules": {
		"react-hooks/rules-of-hooks": "error",
		"react-hooks/exhaustive-deps": "warn",
		"react/jsx-filename-extension": [1, {
			"extensions": [".js", ".jsx"]
		}],
		"no-tabs": "off",
		"indent": [2, "tab"],
		"linebreak-style": "off",
		"react/jsx-indent": [2, "tab"],
		"no-console": "off"
	}
}